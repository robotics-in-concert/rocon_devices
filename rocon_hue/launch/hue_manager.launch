<launch>
  <arg name="set_color" default="set_color"/>
  <arg name="hue_ip"                        default="192.168.10.143"/> <!-- IP of the Hue Bridge -->
  
  <!--hue manager-->

  <node name="hue_bridge" pkg="rocon_hue" type="rocon_hue_bridge.py">
  	<param name="hue_ip"                        value="$(arg hue_ip)"/>
  </node>  

  <node name="hue_manager" pkg="rocon_hue" type="hue_manager.py">
  </node>  
</launch>
